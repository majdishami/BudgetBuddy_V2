{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "typeRoots": [
      "../node_modules/@types",
      "./node_modules/vite/types",
      "./src/types"
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@pages/*": ["./src/pages/*"],
      "@lib/*": ["./src/lib/*"],
      "@hooks/*": ["./src/hooks/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}